---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">Tim's App Launcher</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<div class="dropdown">
				<button class="dropdown-toggle" aria-haspopup="true" aria-expanded="false">TDX Apps â–¼</button>
				<div class="dropdown-menu">
					<a href="/discovery-companion">Discovery Companion</a>
					<a href="/demo-toolbox">Demo Toolbox</a>
					<a href="/docs">TDX Docs</a>
				</div>
			</div>
		</div>
		<div class="header-actions">
			<!-- Theme Toggle Button -->
			<button id="theme-toggle" aria-label="Toggle dark mode">
				<span id="theme-icon" aria-hidden="true">ðŸŒ™</span>
			</button>
		</div>
	</nav>
</header>
<script is:inline>
	const themeToggle = document.getElementById('theme-toggle');
	const themeIcon = document.getElementById('theme-icon');
	const root = document.documentElement;

	function setTheme(theme) {
		root.setAttribute('data-theme', theme);
		localStorage.setItem('theme', theme);
		themeIcon.textContent = theme === 'light' ? 'ðŸŒž' : 'ðŸŒ™';
	}

	// On load: set theme from localStorage or system preference
	const savedTheme = localStorage.getItem('theme');
	const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
	const initialTheme = savedTheme || (prefersDark ? 'dark' : 'light');
	setTheme(initialTheme);

	themeToggle.addEventListener('click', () => {
		const current = root.getAttribute('data-theme');
		setTheme(current === 'dark' ? 'light' : 'dark');
	});
</script>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--bg-surface);
		box-shadow: var(--shadow-sm);
	}

	h2 {
		margin: 0;
		font-size: 1em;
		color: var(--fg-primary);
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--fg-primary);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: var(--container-max);
		margin: 0 auto;
		padding: var(--space-4) 0;
	}

	.internal-links {
		display: flex;
		gap: var(--space-4);
		align-items: center;
	}

	nav a {
		padding: var(--space-2) var(--space-3);
		color: var(--fg-primary);
		text-decoration: none;
		transition: color var(--speed-normal) var(--ease-out);
		border-radius: var(--radius-sm);
	}

	nav a:hover {
		color: var(--primary-accent);
		background: var(--neutral-600);
	}

	nav a.active {
		color: var(--primary-accent);
		font-weight: 600;
	}

	@media (max-width: 720px) {
		.internal-links {
			display: none;
		}
	}

	.header-actions {
		display: flex;
		align-items: center;
		gap: var(--space-4);
	}

	#theme-toggle {
		background: none;
		border: none;
		cursor: pointer;
		font-size: 1.5rem;
		padding: var(--space-2);
		transition: background var(--speed-normal) var(--ease-out);
		border-radius: var(--radius-full);
		color: var(--fg-primary);
	}

	#theme-toggle:focus {
		outline: 2px solid var(--primary-accent);
	}

	#theme-toggle:hover {
		background: var(--neutral-600);
	}

	.dropdown {
		position: relative;
		display: inline-block;
	}
	.dropdown-toggle {
		background: none;
		border: none;
		color: var(--fg-primary);
		font: inherit;
		padding: var(--space-2) var(--space-3);
		border-radius: var(--radius-sm);
		cursor: pointer;
		transition: background var(--speed-normal) var(--ease-out), color var(--speed-normal) var(--ease-out);
	}
	.dropdown-toggle:hover, .dropdown-toggle:focus {
		background: var(--neutral-600);
		color: var(--primary-accent);
	}
	.dropdown-menu {
		display: none;
		position: absolute;
		top: 100%;
		left: 0;
		background: var(--bg-surface);
		box-shadow: var(--shadow-md);
		border-radius: var(--radius-md);
		min-width: 180px;
		z-index: 10;
		padding: 0.5rem 0;
	}
	.dropdown:hover .dropdown-menu,
	.dropdown:focus-within .dropdown-menu {
		display: block;
	}
	.dropdown-menu a {
		display: block;
		padding: var(--space-3) var(--space-4);
		color: var(--fg-primary);
		text-decoration: none;
		transition: background var(--speed-normal) var(--ease-out), color var(--speed-normal) var(--ease-out);
		border-radius: var(--radius-sm);
	}
	.dropdown-menu a:hover, .dropdown-menu a:focus {
		background: var(--neutral-600);
		color: var(--primary-accent);
	}
</style>
